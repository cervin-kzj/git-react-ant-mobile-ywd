@import "../../stylus/color.styl"
@import "../../stylus/font.styl"
@import "../../stylus/common.styl"
.cartFooter
    display: flex;
    position: fixed;
    left: 0;
    z-index: 2;
    bottom: 1.07rem;
    width: 100%;
    height: 1.15rem;
    padding-left: 0.39rem;
    border-top: 0.01rem solid $color6;
    box-sizing: border-box;
    background: $color2;
    & >.checkOut
        width: 2.33rem;
        textVerticalCenter(1.15rem)
        font-size: 0.35rem;
        text-align: center;
        background: #ff5500;
        color: $color2;
    & >.total
        flex-grow: 1;
        & >p
            display: flex;
            justify-content: center;
            height: 50%;
            line-height: 0.23rem;
            font-size: $fontSize5;
            color: $color5;
        & >p:first-child
            align-items: flex-end;
        & >p:last-child
            align-items: flex-start;    
    & >.editBox
        display: flex;
        flex-direction: row;
        width: 1.82rem;
        height: 100%;
        & >div
            width: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
            & >span
                display: inline-block;
                font-size: $fontSize4;
                color: $color3;
            & >input[type='checkbox']
                width: 0.43rem;
                height: 0.43rem;
        & i
            position: absolute;
            width: 0.43rem;
            height: 0.43rem;
            left: 50%;
            top: 37%;
            z-index: 1;
            transform: translateX(-50%) translateY(-50%);
            content: '';
        & >.all>i
            background: url('../../assets/image/radio_hig.png') no-repeat center center / 0.43rem 0.43rem;
        & >.edit>i
            background: url('../../assets/image/editor_nor.png') no-repeat center center / 0.43rem 0.43rem;