@import "../../stylus/color.styl"
@import "../../stylus/font.styl"
@import "../../stylus/common.styl"

.detailFooter 
    display: flex;
    justify-content: space-between;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 1;
    width: 100%;
    height: 0.98rem;
    background: $color2;
    border-top: 0.01rem solid $color7;
    & >.item
        display: flex;
        font-size: $fontSize7;
        color: $color2;
        & >li
            textVerticalCenter(0.98rem)
            text-align: center;
    & .addCart
        width: 1.98rem;
        background: $color1;
    & .buyNow
        width: 2rem;
        background: #ec2222;
        
.total
    padding-left: 0.3rem;
    & >span
        line-height: 0.98rem;
    & >.zj
        font-size: $fontSize7;
        color: $color3;
    & >.rmb
        margin-left: 0.33rem;    

.total>.rmb, .total>.je
    font-size: $fontSize6;
    color: #eb2222;

