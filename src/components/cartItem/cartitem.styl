@import "../../stylus/color.styl"
@import "../../stylus/font.styl"
@import "../../stylus/common.styl"
$scopeColor1=#cccccc;

.item>.itemInfo
    flex-grow: 1;
    display: flex;

.itemInfo>.info
    width: 3.21rem;
    height: 100%;
    padding: 0.32rem 0.21rem;
    box-sizing: border-box;
    & >.title
        font-size: 0.32rem;
        line-height: 0.42rem;
    & .attr
        display: inline-block;
        textVerticalCenter(0.32rem)
        font-size: $fontSize4;
        color: $color5;
    & >.cartNum
        display: flex;
        width: 2.34rem;
        height: 0.47rem;
        line-height: 0.45rem;
        font-size: $fontSize8;
        margin-top: 0.15rem;
        border: 0.01rem solid $scopeColor1;
        box-sizing: border-box;

.itemInfo>.price
    flex-grow: 1;
    height: 100%;
    line-height: 2.21rem;
    padding-left: 0.22rem;
    box-sizing: border-box;
    color: #000000;
    font-size: $fontSize4;
    & >.v
        max-width: 1.22rem;
        overflow-x: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    & >.rmb
        margin-right: 0.1rem;
    & >.box::after
        clearfix()
    & span
        float: left;

.itemInfo>.thumb
    display: flex;
    align-items: center;
    width: 1.57rem;
    height: 100%;
    & >img
        width: 100%;
        height: 1.57rem;

.cartNum>.minus, .cartNum>.plus
    width: 0.78rem;
    text-align: center;
    border: 0.01rem solid $scopeColor1;
    box-sizing: border-box;

.cartNum>.text_wrap 
    flex-grow: 1;
    border: 0.01rem solid $scopeColor1;
    box-sizing: border-box;

.cartNum>.text_wrap>input
    float: left;
    width: 0.82rem;
    height: 100%;
    text-align: center;

.shopInfo
    width: 100%;
    textVerticalCenter(1.06rem)
    background: url('../../assets/image/store.png') no-repeat 0.36rem center / 0.36rem 0.36rem;
    text-indent: 1rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

.cartItem .item
    padding-left: 0.17rem;
    display: flex;
    & >.checkBox
        position: relative;
        width: 0.84rem;
        height: 100%;
        margin: 0 auto;
        & >input[type='checkbox']
            elePositionCenter()
            width: 0.43rem;
            height: 0.43rem;
        & >i
            width: 0.43rem;
            height: 0.43rem;
            elePositionCenter()
            z-index: 1;
            content: '';
            background: url('../../assets/image/radio_hig.png') no-repeat center center / 0.43rem 0.43rem;
    /* radio_hig.png */