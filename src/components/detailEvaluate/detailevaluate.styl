@import "../../stylus/color.styl"
@import "../../stylus/font.styl"
@import "../../stylus/common.styl"

.evaluateCon {
    width: 100%;
}

.evaluateTab
    width: 100%;
    padding: 0.1rem 0;
    border-bottom: 0.01rem solid $color7;
    & >li
        float: left;
        margin-right: 0.4rem;
        width: 1.35rem;
        textVerticalCenter(0.51rem)
        font-size: $fontSize6;
        text-align: center;
        border-radius: 0.23rem;
        color: $color2;
        background: $color5;
    & >li:last-child
        margin-right: 0rem;
    & >.act
        color: $color2;
        background: $color1;