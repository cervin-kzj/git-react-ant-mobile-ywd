@import "../../stylus/color.styl"
@import "../../stylus/font.styl"
@import "../../stylus/common.styl"

.registerInContainer
    width: 6rem;
    height: 7.21rem;
    margin: 0 auto;
    margin-top: 1.92rem;

.am-list-item.am-input-item
    textVerticalCenter(1.31rem)

.am-list-item .am-input-control input, .am-list-item .am-input-label 
    font-size: $fontSize7;

.am-list-item, .am-list-item .am-list-line, .am-list-item.am-input-item
    padding: 0;

.inputClass
    border-bottom: 1px solid #b8b8b8;

.am-list-item .am-input-label
    color: $color4;

.forgetItem 
    height: 0.98rem;
    & >a
        float: right;
        textVerticalCenter(0.98rem)
        color: $color3
        
.commonBtn 
    textVerticalCenter(1.01rem)
    font-size: 0.33rem;
    color: $color2;
    background-color: $color1;

.verifyItem 
    display: flex;
    & >.verifyItemIn 
        width: 4.46rem;
        float: left;
        height: 1.31rem;

.getVerify
    flex-grow: 1;
    text-align: center;
    line-height: 1.31rem;
    color: #fe0141;

.agreementItem
    height: 1.29rem;

.am-checkbox-agree 
    margin: 0px;
    padding: 0px;

.am-checkbox-agree .am-checkbox 
    width: 0.3rem;

.am-checkbox-inner 
    width: 0.3rem;
    height: 0.3rem;

.am-checkbox-agree .am-checkbox-inner 
    left: 0;
    top: 50%;
    transform: translateY(-50%);

.am-checkbox-agree .am-checkbox-agree-label
    font-size: $fontSize2;
    line-height: 1.29rem;
    margin-top: 0px;
    margin-left: 0.49rem;

.am-checkbox-inner:after 
    width: 0.05rem;
    height: 0.11rem;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%) rotate(45deg);

.am-checkbox-agree .am-checkbox-agree-label 
    color: $color3;

.am-checkbox-agree .am-checkbox-agree-label>a 
    color: $color3;